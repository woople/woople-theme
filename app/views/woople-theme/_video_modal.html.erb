<div id="myModal" class="modal hide">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>
    <h3><%= video.name %></h3>
  </div>
  <div class="modal-body">
    <div class="modal-video">
      <div class="modal-video-box">
        <div id="theme_video"></div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" id="btn-favorite" class="btn <%= video.favorite_css_class %>" data-toggle="button">
      <i class="icon-star"></i>
      <%= t 'woople_theme.video_modal.favorite' %>
    </button>

    <div class="btn-group" data-toggle="buttons-radio">
      <button class="btn btn-like <%= video.liked_css %>">
        <i class="icon-thumbs-up"></i> <%=t 'woople_theme.video_modal.like' %>
      </button>
      <button class="btn btn-dislike <%= video.disliked_css %>">
        <i class="icon-thumbs-down"></i> <%=t 'woople_theme.video_modal.dislike' %>
      </button>
    </div>
  </div>
</div>
